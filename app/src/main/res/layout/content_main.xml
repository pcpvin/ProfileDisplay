<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="f22.f22assignment.MainActivity">

        <LinearLayout
            android:id="@+id/relateFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/download"
                android:fitsSystemWindows="true"
                android:orientation="horizontal">
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_alignParentBottom="true"
                     android:layout_marginBottom="25dp"
                     android:layout_alignParentRight="true"
                     android:layout_marginRight="20dp"
                     android:layout_height="wrap_content">
                     <ImageView
                         android:id="@+id/fb_icon"
                         android:layout_gravity="center"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/fill_1" />

                     <ImageView
                         android:id="@+id/twitter_icon"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:layout_marginLeft="30dp"
                         android:layout_toEndOf="@+id/fb_icon"
                         android:layout_toRightOf="@+id/fb_icon"
                         android:src="@drawable/fill_4" />

                     <ImageView
                         android:id="@+id/insta_icon"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="30dp"
                         android:layout_gravity="center"
                         android:layout_toEndOf="@+id/twitter_icon"
                         android:layout_toRightOf="@+id/twitter_icon"
                         android:src="@drawable/fill_4" />

                     <LinearLayout
                         android:layout_width="46dp"
                         android:layout_height="46dp"
                         android:id="@+id/settings_button"
                         android:layout_marginLeft="30dp"
                         android:layout_toEndOf="@+id/insta_icon"
                         android:layout_toRightOf="@+id/insta_icon"
                         android:background="@drawable/oval_7">

                         <ImageView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_gravity="center"
                             android:background="?attr/selectableItemBackgroundBorderless"
                             android:src="@drawable/fill_73" />

                     </LinearLayout>
                 </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFirst"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@+id/relateFirst"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="65.6dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:text="1056"
                    android:textColor="#181c26"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="46dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="15dp"
                    android:text="650"
                    android:textColor="#181c26"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="46dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="41dp"
                    android:text="376"
                    android:textColor="#181c26"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spikes"

                    android:textColor="#9ca5b9"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Followers"
                    android:textColor="#9ca5b9"
                    android:textSize="13dp"
                    android:id="@+id/textView3" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Following"
                    android:textColor="#9ca5b9"
                    android:textSize="13dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:text="Brad_bdizzle"
                android:textColor="#181c26"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Song Writer , Singer"
                android:textColor="#9ca5b9"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="I like long walks to the ocean and back."
                android:textColor="#202431"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/linearFirst"
                android:layout_marginTop="30dp"
                android:id="@+id/linear1"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00dfb8">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/fill_80" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/linear2"
                    android:background="#f7f8fb">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/fill_78" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/linear3"
                    android:background="#f7f8fb">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/fill_28" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/linear4"
                    android:background="#f7f8fb">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/fill_75" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/profile_height"
            android:layout_height="@dimen/profile_height"
            android:layout_below="@+id/relateFirst"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-45dp"
            android:src="@drawable/user_image" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/linearCard"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/linearFirst"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:weightSum="3">

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="-20dp"
                    android:layout_marginTop="20dp"
                    android:text="Project 1"
                    android:textColor="#202431"
                    android:textSize="14sp"

                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="-20dp"
                    android:layout_marginTop="20dp"
                    android:text="Project 2"
                    android:textColor="#202431"
                    android:textSize="14sp"

                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="-20dp"
                    android:layout_marginTop="20dp"
                    android:text="Project 3"
                    android:textColor="#202431"
                    android:textSize="14sp"

                    />

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>